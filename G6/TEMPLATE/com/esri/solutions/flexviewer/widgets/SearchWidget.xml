<configuration>
	<layers>
		<layer>
			<name>Permitted Sites</name>
			<url>http://beta.geostor.arkansas.gov/ArcGIS/rest/services/APPS/APP_ADEQ/MapServer/0</url>
			<expression>PMTNBR  = '[value]'</expression>
			<textsearchlabel>Search by Permit Number: [ Example: 60001943 ]:</textsearchlabel>
			<graphicalsearchlabel>Use one of the graphical search tools to select Permitted Sites</graphicalsearchlabel>
			<fields>PMTNBR </fields>
			<titlefield>PMTNBR </titlefield>
			<linkfield></linkfield>
		</layer>
		<layer>
			<name>Facilities</name>
			<url>http://beta.geostor.arkansas.gov/ArcGIS/rest/services/APPS/APP_ADEQ/MapServer/1</url>
			<expression>FNAME = '[value]'</expression>
			<textsearchlabel>Search Facilities by name: [ Example: FAST MART INC ]</textsearchlabel>
			<graphicalsearchlabel>Use one of the graphical search tools to select Facilities</graphicalsearchlabel>
			<fields>FNAME,FSITECITY,FSITEADDR2</fields>
			<titlefield>FNAME</titlefield>
			<linkfield></linkfield>
		</layer>
	</layers>
	<zoomscale>5000</zoomscale>
</configuration>